{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": [
    "!**/*",
    "src/polyfills.ts"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "projects/ngx-components-doc/tsconfig.app.json",
          "projects/ngx-components-doc/tsconfig.spec.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "doc",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "doc",
            "style": "kebab-case"
          }
        ],
        "no-console": "off",
        "no-unsafe-return": "off",
        "no-useless-escape": "off",
        "no-prototype-builtins": "off",
        "@typescript-eslint/no-unsafe-return": "off"
      }
    },
    {
      "files": [
        "*.html"
      ],
      "rules": {}
    }
  ]
}
